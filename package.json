{
  "name": "fles-js",
  "version": "0.2.1",
  "description": "Modern, type-safe TypeScript framework for Bun",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "fles": "cli.js"
  },
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsup",
    "dev": "bun --watch src/bin/dev.ts",
    "cli": "bun src/bin/cli.ts",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.{ts,json}\"",
    "prepublishOnly": "bun run build"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "cli.js"
  ],
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "dotenv": "^16.3.1",
    "fles-js": ".",
    "fs-extra": "^11.1.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.8.0",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "rimraf": "^6.0.1",
    "tsup": "^8.0.1",
    "typescript": "^5.3.2"
  },
  "peerDependencies": {
    "bun": ">=1.0.0"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rfflsy16/fles-js.git"
  },
  "author": "Rafles",
  "license": "MIT",
  "keywords": [
    "bun",
    "framework",
    "typescript",
    "api",
    "server"
  ]
}
