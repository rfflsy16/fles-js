{
  "compilerOptions": {
      "target": "ES2022",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "outDir": "./dist",
      "declaration": true,
      "baseUrl": ".",
      "paths": {
          "@/*": ["src/*"]
      },
      "rootDir": ".",
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": ["src/**/*.ts", "bin/**/*.ts"],
  "exclude": ["node_modules", "dist", "examples", "**/*.test.ts"]
}